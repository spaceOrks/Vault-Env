{
  "name": "vault-env",
  "displayName": "vault-env",
  "description": "",
  "version": "0.0.3",
  "repository": {
    "type": "git",
    "url": "https://github.com/spaceOrks/Vault-Env"
  },
  "bugs": {
    "url": "https://github.com/spaceOrks/Vault-Env/issues"
  },
  "homepage": "https://github.com/spaceOrks/Vault-Env/#README.md",
  "publisher": "SpaceOrks",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:VaultParamsView",
    "onView:VaultSecretsView",
    "onView:VaultCurrentEnvView"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vault-env.env.show",
        "title": "Show",
        "icon": "$(eye)"
      },
      {
        "command": "vault-env.env.hide",
        "title": "Hide",
        "icon": "$(eye-closed)"
      },
      {
        "command": "vault-env.env.edit",
        "title": "Edit",
        "icon": "$(edit)"
      },
      {
        "command": "vault-env.servers.addServer",
        "title": "Add server",
        "icon": "$(add)"
      },
      {
        "command": "vault-env.servers.removeServer",
        "title": "Remove server",
        "icon": "$(trash)"
      },
      {
        "command": "vault-env.servers.changeName",
        "title": "Change server's name",
        "icon": "$(refresh)"
      },
      {
        "command": "vault-env.servers.changeStorage",
        "title": "Change vault's storage",
        "icon": "$(refresh)"
      },
      {
        "command": "vault-env.servers.changeUrl",
        "title": "Change server's url",
        "icon": "$(server)"
      },
      {
        "command": "vault-env.servers.changeToken",
        "title": "Change token",
        "icon": "$(gist-secret)"
      },
      {
        "command": "vault-env.servers.changeIgnoreSsl",
        "title": "Change ssl",
        "icon": ""
      },
      {
        "command": "vault-env.configs.loadSecret",
        "title": "launch Vault Env ext"
      },
      {
        "command": "vault-env.servers.listConfigs",
        "title": "List allowed configs"
      },
      {
        "command": "vault-env.env.closeCurrentEnv",
        "title": "Close env",
        "icon": "$(clear-all)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "vaultSecrets",
          "title": "Vault Secrets",
          "icon": "resources/safe.svg"
        }
      ]
    },
    "views": {
      "vaultSecrets": [
        {
          "id": "vaultParamsView",
          "name": "Servers"
        },
        {
          "id": "vaultSecretsView",
          "name": "Configs"
        },
        {
          "id": "vaultCurrentEnvView",
          "name": "Current Env"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "vault-env.servers.addServer",
          "when": "view == vaultParamsView",
          "group": "navigation"
        },
        {
          "command": "vault-env.env.show",
          "when": "view == vaultCurrentEnvView && vaultEnvVisible == false",
          "group": "navigation"
        },
        {
          "command": "vault-env.env.hide",
          "when": "view == vaultCurrentEnvView && vaultEnvVisible == true",
          "group": "navigation"
        },
        {
          "command": "vault-env.env.closeCurrentEnv",
          "when": "view == vaultCurrentEnvView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "vault-env.servers.removeServer",
          "when": "viewItem == 'ParamItem'",
          "group": "inline"
        },
        {
          "command": "vault-env.env.edit",
          "when": "viewItem == 'vaultEnvItem'",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/node-fetch": "^2.6.13",
    "@types/vscode": "^1.55.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.32.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "node-fetch": "^3.3.2"
  }
}
